<!--xaml은 뷰 설계 파일-->
<!--windox tag로 시작, 이 태그는 현재 이 윈도우의 객체 의미, 이 태그 안에 관련된 뷰 설정, 이벤트 처리 방식을 xml 형태로 작성-->
<!--레이아웃 작성 = 뷰 위젯을 어떻게 배치할지 결정
    * StackPanel : stack처럼 뷰 객체를 쌓음, Orientation 속성으로 쌓을 방향 지정 (virtical, horizontal)
      <StackPanel Orientation="Horizontal">
    * Grid : 뷰 위젯을 격자로 배치
      <Grid.ColumnDefinitions/> 
      <Grid.RowDefinitions/>
    ...
-->
<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button Content="Save" Width="80" x:Name ="bnt1" Click="bnt1_Click"/>
        <Button Content="새창 열기" Width="80" x:Name ="bnt2" Click="bnt2_Click"/>
        <Button Content="Delete" Width="80" x:Name ="bnt3"/>
        <!--2줄 2칸-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Labebl, TextBlock은 문자표시칸-->
            <Label x:Name="label1" Content="레이블 입니다." Grid.Column="0" Grid.Row="0"/>
            <TextBlock x:Name="tbl" Text="이것은 텍스트 블록입니다." Grid.Column="1" Grid.Row="0"/>
            <!--TextBox는 입력칸-->
            <TextBox x:Name="tb1" Text="여기에 내용 입력" Grid.Column="0" Grid.Row="1"/>
            <Button Content="설정" Grid.Column="1" Grid.Row="1" Click="Button_Click"/>
        </Grid>
        <StackPanel Orientation="Vertical">
            <!--라디오 버튼은 그룹중 한개만 선택 가능-->
            <!--체크 박스는 그룹이 동일하더라도 여러개 선택 가능-->
            <RadioButton x:Name="ra1" GroupName="gr1" Content="좋음" IsChecked="True" Checked="ra1_Checked"/>
            <RadioButton x:Name="ra2" GroupName="gr1" Content="보통" Checked="ra1_Checked"/>
            <RadioButton x:Name="ra3" GroupName="gr1" Content="나쁨" Checked="ra1_Checked"/>
            <CheckBox x:Name="c1" Content="동의하시나요" Checked="c1_Checked"/>
        </StackPanel>
        <!--ListBox의 경우 목록 출력할 때 사용-->
        <ListBox Width="100" x:Name="lst1"/>
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="nametag" Width="40" Text="이름" Grid.Column="0" Grid.Row="0"/>
                <TextBlock x:Name="teltag" Width="40" Text="번호" Grid.Column="0" Grid.Row="1"/>
                <TextBox x:Name="name" Width="60" Text="" Grid.Column="1" Grid.Row="0"/>
                <TextBox x:Name="tel" Width="60" Text="" Grid.Column="1" Grid.Row="1"/>
            </Grid>
            <Button Content="저장" Click="Button_Click_1"/>
            <Button Content="수정" Click="Button_Click_2"/>
            <Button Content="삭제" Click="Button_Click_3"/>
            <ListBox x:Name="tel_lst" Height="150" SelectionChanged="tel_lst_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Width="40"/>
                            <TextBlock Text="{Binding Tel}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <!--column의 개수가 작으면 알아서 반복을 해서 출력하기 때문에 
            1번만 출력하기 위해 AutoGenerateColumns는 False로-->
            <DataGrid x:Name="lst3" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Tel" Binding="{Binding Tel}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
    
    
</Window>
